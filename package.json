{
  "name": "@hzfc/reiva.spider",
  "private": true,
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "start": "node -r dotenv/config ./dist/main.js",
    "dev": "tsnd -r dotenv/config ./src/main.ts",
    "debug": "tsnd --inspect -r dotenv/config ./src/main.ts",
    "build": "tsc",
    "lint": "prettier . -cw",
    "format": "prettier . -w",
    "docker:build": "docker build --no-cache -t hzfc_reiva_spider .",
    "docker:run": "docker run -d --name hzfc_reiva_spider -p 9000:9000 hzfc_reiva_spider"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,ts,md}": [
      "prettier -cw"
    ]
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.3",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "config": "^3.3.3",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.20",
    "ppspider": "^2.2.3",
    "xmldom": "^0.4.0",
    "xpath": "^0.0.32"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.23",
    "@types/config": "^0.0.37",
    "@types/express": "^4.17.9",
    "@types/lodash": "^4.14.165",
    "@types/mongodb": "^3.6.3",
    "@types/nedb": "^1.8.11",
    "@types/node": "^11.9.4",
    "@types/puppeteer": "^5.4.2",
    "@types/request": "^2.48.5",
    "@types/validator": "^13.1.1",
    "@types/xmldom": "^0.1.30",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "engines": {
    "node": ">=12.x"
  },
  "author": {
    "name": "郑贤森",
    "email": "zhengxs2018@foxmail.com"
  },
  "license": "MIT"
}
